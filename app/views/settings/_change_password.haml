%p.in-gold-500.font-18.mb-25= t('change_pass.title')
= form_for current_user, url: change_pwd_setting_path, method: :put, authenticity_token: true, class: "general-form-md divider-lg-bottom pb-25" do |f|
  .form-group.mb-30
    = f.label :old_password, t('change_pass.old_pwd'), class: 'control-label input-label'
    = f.password_field :old_password, placeholder: t('change_pass.old_pwd'), class: "form-control"
  .form-group.mb-30
    = f.label :password, t('change_pass.new_pwd'), class: 'control-label input-label'
    = f.password_field :password, placeholder: t('change_pass.new_pwd'), class: "form-control"
  .form-group.mb-40
    = f.label :password, t('change_pass.conf_pwd'), class: 'control-label input-label'
    = f.password_field :password_confirmation, placeholder: t('change_pass.conf_pwd'), class: "form-control"
  .general-text-align
    %button.btn.disabled.mb-10= t('button.save')
