%table.table.table-hover
  %thead
    %tr
      %th
        %span.in-grey-600= t('settings.my_orders.table_number')
      %th
        %span.in-grey-600= t('settings.my_orders.table_completed')
      %th
        %span.in-grey-600= t('settings.my_orders.table_status')
      %th
        %span.in-grey-600= t('settings.my_orders.table_total')
  %tbody
    - unless orders.nil?
      - orders.each do |order|
        %tr
          %td
            %span.general-order-number
              = link_to order.number, order_details_path(order.id)
          %td
            %span.in-grey-900.font-16.fw-300= order.date_Y_m_d
          %td
            %span.font-16.in-grey-900.fw-300= order.order_status.name
          %td
            %strong.font-16= "â‚¬#{order.total_price}"
