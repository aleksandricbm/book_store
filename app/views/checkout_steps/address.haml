%main.container
  = render 'header'
  .hidden-xs.hidden-sm
    .row
      .col-md-5
        %h3.general-subtitle= t("settings.b_address")
        %p.general-info-text= t("form.all_fld_require")
      .col-md-5.col-md-offset-1
        %h3.general-subtitle= t("settings.s_address")
  = form_for @address, url: wizard_path, method: :put, remote: false do |f|
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle= t("settings.b_address")
          %p.general-info-text= t("form.all_fld_require")
        = render template: 'forms/address.haml', locals: {f: f, address: @address.billing}
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle= t("settings.s_address")
        = render template: 'forms/address.haml', locals: {f: f, address: @address.shipping}
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
      %button.btn.center-block.mb-20= t('button.save_continue')

